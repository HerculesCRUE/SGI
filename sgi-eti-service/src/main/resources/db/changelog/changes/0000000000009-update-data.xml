    <sql dbms="postgresql">
      UPDATE ${schemaPrefix}memoria SET activo = false WHERE peticion_evaluacion_id IN (SELECT id FROM ${schemaPrefix}peticion_evaluacion WHERE activo is false)
    </sql>
  </changeSet>

</databaseChangeLog>